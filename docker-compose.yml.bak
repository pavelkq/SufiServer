services:
  admin-backend:
    build: ./admin-backend
    depends_on:
      - db
    environment:
      - DB_HOST=db
      - DB_USER=user
      - DB_PASSWORD=pass
      - DB_NAME=auth
      - DB_PORT=5432
      - PORT=4001
      - JWT_SECRET=your_jwt_secret_here
    ports:
      - "4001:4001"
    volumes:
      - ./admin-backend:/app
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:4001/ping"]  # изменил на /ping, если есть такой маршрут
      interval: 30s
      timeout: 10s
      retries: 3

  auth-service:
    build: ./auth-service
    depends_on:
      - db
    environment:
      - DB_HOST=db
      - DB_USER=user
      - DB_PASSWORD=pass
      - DB_NAME=auth
      - DB_PORT=5432
      - PORT=5000
      - JWT_SECRET=your_jwt_secret_here
      - JWT_EXPIRES_IN=1h
    ports:
      - "5000:5000"
    volumes:
      - ./auth-service:/app
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  db:
    image: postgres:13
    volumes:
      - pgdata:/var/lib/postgresql/data
      - ./wrapper.sh:/wrapper.sh
    entrypoint: ["/wrapper.sh"]
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: pass
      POSTGRES_DB: saki  # проверьте, что база auth создаётся отдельно, если нужна
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U user -d saki"]
      interval: 10s
      timeout: 5s
      retries: 5

  saki-service:
    build: ./saki-service
    depends_on:
      db:
        condition: service_healthy
    environment:
      - DB_HOST=db
      - DB_USER=user
      - DB_PASSWORD=pass
      - DB_NAME=saki
      - DB_PORT=5432
      - PORT=4000
    ports:
      - "4000:4000"
    volumes:
      - ./saki-service:/app
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:4000/health"]
      interval: 10s
      timeout: 10s
      retries: 3
      start_period: 60s

  nginx:
    image: nginx:latest
    ports:
      - "8090:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      saki-service:
        condition: service_healthy

volumes:
  pgdata:
